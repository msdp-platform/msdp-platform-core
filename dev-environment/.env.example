# MSDP Development Environment Configuration
# Copy this file to .env.dev and customize for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Developer name (used for namespace and resource naming)
DEVELOPER_NAME=santanu

# Development profile (full, admin, merchant)
PROFILE=full

# Kubernetes namespace (auto-generated: dev-${DEVELOPER_NAME})
NAMESPACE=dev-santanu

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# AKS cluster context (leave empty to use current context)
KUBE_CONTEXT=

# Kubernetes namespace auto-shutdown time (24-hour format)
AUTO_SHUTDOWN_TIME=18:00

# Timezone for auto-shutdown
TIMEZONE=GMT

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS region for Aurora Serverless
AWS_REGION=eu-west-1

# Aurora Serverless cluster identifier prefix
DB_CLUSTER_PREFIX=msdp

# Aurora Serverless configuration
AURORA_MIN_CAPACITY=0.5
AURORA_MAX_CAPACITY=4
AURORA_AUTO_PAUSE_MINUTES=5

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Service ports (for port forwarding and intercepts)
ADMIN_DASHBOARD_PORT=4000
MERCHANT_WEBAPP_PORT=4003
API_GATEWAY_PORT=3000
ADMIN_SERVICE_PORT=3005
MERCHANT_SERVICE_PORT=3002
USER_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3006
PAYMENT_SERVICE_PORT=3007
LOCATION_SERVICE_PORT=3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection settings (will be auto-configured for Aurora)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=msdp_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=dev_password

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node.js environment
NODE_ENV=development

# Logging level
LOG_LEVEL=debug

# Enable CORS for development
ENABLE_CORS=true

# JWT configuration
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=24h

# =============================================================================
# TELEPRESENCE CONFIGURATION
# =============================================================================

# Enable Telepresence preview URLs
TELEPRESENCE_PREVIEW=true

# Telepresence intercept configuration
TELEPRESENCE_USE_LOCAL_ENV=true
TELEPRESENCE_MOUNT_REMOTE_VOLUMES=false

# =============================================================================
# DEVELOPMENT TOOLS CONFIGURATION
# =============================================================================

# Skaffold configuration
SKAFFOLD_DEFAULT_REPO=
SKAFFOLD_CACHE_ARTIFACTS=true

# Enable file sync for hot reloading
ENABLE_FILE_SYNC=true

# Docker build configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# MONITORING & DEBUGGING
# =============================================================================

# Enable debug logging
DEBUG=msdp:*

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# =============================================================================
# COST OPTIMIZATION
# =============================================================================

# Enable auto-shutdown
ENABLE_AUTO_SHUTDOWN=true

# Resource limits (for development)
CPU_REQUEST=100m
CPU_LIMIT=500m
MEMORY_REQUEST=128Mi
MEMORY_LIMIT=512Mi

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Development security settings (less strict for development)
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=false
HELMET_ENABLED=false

# SSL/TLS (disabled for development)
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=true

# Enable development tools
ENABLE_DEV_TOOLS=true

# Enable hot reloading
ENABLE_HOT_RELOAD=true

# Enable GraphQL playground
ENABLE_GRAPHQL_PLAYGROUND=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email service (disabled for development)
EMAIL_ENABLED=false
EMAIL_PROVIDER=console

# SMS service (disabled for development)
SMS_ENABLED=false
SMS_PROVIDER=console

# Payment gateway (use test/sandbox)
PAYMENT_GATEWAY_MODE=sandbox

# =============================================================================
# MULTI-COUNTRY CONFIGURATION
# =============================================================================

# Default country for development
DEFAULT_COUNTRY=GB

# Supported countries
SUPPORTED_COUNTRIES=GB,US,IN,SG

# Currency configuration
DEFAULT_CURRENCY=GBP
CURRENCY_CONVERSION_ENABLED=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2
