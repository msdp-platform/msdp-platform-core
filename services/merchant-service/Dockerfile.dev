# Optimized Development Dockerfile for Merchant Service
FROM node:18-alpine

# Install essential tools for development
RUN apk add --no-cache curl dumb-init && \
  addgroup -g 1001 -S nodejs && \
  adduser -S merchantservice -u 1001 -G nodejs

# Set working directory
WORKDIR /app

# Copy package files first (better Docker layer caching)
COPY package*.json ./

# Install dependencies (optimized for development)
RUN npm install && npm cache clean --force

# Copy source code
COPY --chown=merchantservice:nodejs . .

# Switch to non-root user
USER merchantservice

# Expose port
EXPOSE 3002

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:3002/health || exit 1

# Use dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev"]